<configuration>
  <!-- MapReduce framework name -->
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>
  
  <!-- Application Master -->
  <property>
    <name>mapreduce.application.framework.path</name>
    <value>${HADOOP_HOME}/share/hadoop/mapreduce/hadoop-mapreduce-client-app.jar</value>
  </property>
  
  <!-- Job History Server -->
  <property>
    <name>mapreduce.jobhistory.address</name>
    <value>localhost:10020</value>
  </property>
  
  <!-- Job History Server webapp -->
  <property>
    <name>mapreduce.jobhistory.webapp.address</name>
    <value>localhost:19888</value>
  </property>
  
  <!-- Interactive mode -->
  <property>
    <name>mapreduce.jobtracker.address</name>
    <value>local</value>
  </property>
  
  <!-- Local mode -->
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>
  
  <!-- Memory settings for mappers -->
  <property>
    <name>mapreduce.map.memory.mb</name>
    <value>512</value>
  </property>
  
  <property>
    <name>mapreduce.reduce.memory.mb</name>
    <value>512</value>
  </property>
  
  <!-- Java options -->
  <property>
    <name>mapreduce.map.java.opts</name>
    <value>-Xmx409m</value>
  </property>
  
  <property>
    <name>mapreduce.reduce.java.opts</name>
    <value>-Xmx409m</value>
  </property>
  
  <!-- Temporary directory -->
  <property>
    <name>mapreduce.cluster.temp.dir</name>
    <value>${hadoop.tmp.dir}/mapred</value>
  </property>
</configuration>


