<configuration>
  <!-- Single node configuration -->
  <property>
    <name>dfs.replication</name>
    <value>1</value>
  </property>
  
  <!-- NameNode data directory -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:/opt/hadoop_data/namenode</value>
  </property>
  
  <!-- DataNode data directory -->
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>file:/opt/hadoop_data/datanode</value>
  </property>
  
  <!-- Secondary NameNode directory -->
  <property>
    <name>dfs.namenode.checkpoint.dir</name>
    <value>file:/opt/hadoop_data/namesecondary</value>
  </property>
  
  <!-- Enable webhdfs -->
  <property>
    <name>dfs.webhdfs.enabled</name>
    <value>true</value>
  </property>
  
  <!-- Disable permissions for development -->
  <property>
    <name>dfs.permissions.enabled</name>
    <value>false</value>
  </property>
  
  <!-- Enable NameNode RPC (using container hostname) -->
  <property>
    <name>dfs.namenode.rpc-address</name>
    <value>hadoop:9000</value>
  </property>
  
  <!-- Enable NameNode HTTP (0.0.0.0 = listen on all interfaces) -->
  <property>
    <name>dfs.namenode.http-address</name>
    <value>0.0.0.0:9870</value>
    <description>Адрес для веб-интерфейса NameNode. 0.0.0.0 означает "слушать на всех интерфейсах".</description>
  </property>
  
  <!-- Reduce block size for testing -->
  <property>
    <name>dfs.blocksize</name>
    <value>134217728</value> <!-- 128MB -->
  </property>
  
  <!-- Allow truncate -->
  <property>
    <name>dfs.support.append</name>
    <value>true</value>
  </property>
  
  <!-- DataNode hostname for external access -->
  <property>
    <name>dfs.datanode.hostname</name>
    <value>localhost</value>
    <description>
      Имя хоста, которое DataNode будет сообщать NameNode.
      Это нужно, чтобы внешние клиенты (как ваш браузер)
      перенаправлялись на localhost, а не на внутреннее имя контейнера.
    </description>
  </property>
</configuration>

